# Redirect all requests to index.php (simple front-controller)
Options -MultiViews
RewriteEngine On
RewriteBase /pas-connect/

# If file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise send to index.php
RewriteRule ^ index.php [L,QSA]
